<section>
    <div class="container">
        <div class="row mt-4">
            <a href="/admin/add-product" class="btn btn-success ml-auto" >Add product</a>
        </div>
        <table class="table mt-5">
            <thead>
               
                <tr>
                    <th scope="col" >Date</th>
                    <th>Address</th>
                    <th>Pincode</th>
                    <th>mobile</th>
                    <th scope="col">Amount</th>
                    <th scope="col">payment</th>
                    <th>status</th>
                </tr>
            </thead>
            <tbody>
                 {{#each orders}}
                 <tr>
                    <td>{{this.date}}</td>
                    <td>{{this.deliveryDetails.address}}</td>
                    <td>{{this.deliveryDetails.mobile}}</td>
                    <td>{{this.deliveryDetails.Pincode}}</td>
                    <td>{{this.totalAmount}}</td>
                    <td>{{this.paymentMethod}}</td>
                    <td>{{this.status}}</td>
                    <td>
                        <a href="/views-order-products/{{this._id}}" class="btn btn-primary">View products</a>
                    </td>
                 </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>